{
  "name": "hangout-bar",
  "version": "1.0.0",
  "description": "A real-time social hangout space with chat, rooms, friends, DMs, feed, and voice",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "npm start --prefix client",
    "build": "npm install --prefix client && npm run build --prefix client",
    "start": "node server/index.js",
    "install-all": "npm install && npm install --prefix client"
  },
  "keywords": [
    "hangout",
    "chat",
    "video-sync",
    "collaborative"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^9.1.4",
    "multer": "^2.0.0",
    "nodemailer": "^6.10.0",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.11"
  }
}
