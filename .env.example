# Backend environment variables (copy to .env)

# Server
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:3000
# Public URL used to build email links (verify/reset)
SERVER_PUBLIC_URL=http://localhost:5000

# Database
# Local MongoDB example:
MONGODB_URI=mongodb://localhost:27017/hangout-bar
# If false, server will refuse to start without MongoDB
ALLOW_IN_MEMORY=true

# Email (SMTP) - required for email verification + password resets.
# If not configured, the server will log verify/reset links to the console.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
# true for port 465; for Gmail on 587 keep this false (STARTTLS)
SMTP_SECURE=false

# Optional SMTP timeouts (useful on hosted platforms)
SMTP_CONNECTION_TIMEOUT_MS=15000
SMTP_GREETING_TIMEOUT_MS=15000
SMTP_SOCKET_TIMEOUT_MS=60000
SMTP_TLS_REJECT_UNAUTHORIZED=true

# Optional
DEBUG_LOGS=false
PORT_AUTO_INCREMENT=false
